<mah:MetroWindow x:Class="agvProject.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"     
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:vm="clr-namespace:agvProject.ViewModels"
        xmlns:local="clr-namespace:agvProject.Views"
        mc:Ignorable="d"
        Title="AGV 통합 관리 시스템" Height="720" Width="1280" ResizeMode="NoResize">

    <mah:MetroWindow.Resources>
        <!-- 탭 헤더 템플릿 -->
        <DataTemplate x:Key="TabHeaderTemplate" DataType="{x:Type vm:TabItemViewModel}">
            <TextBlock Text="{Binding Header}" />
        </DataTemplate>

        <!-- ViewModel → View 매핑 -->
        <DataTemplate DataType="{x:Type vm:MainMonitoringViewModel}">
            <local:MainMonitoringView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MissionQueryViewModel}">
            <local:MissionViewControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EventLogViewModel}">
            <local:EventLogView/>
        </DataTemplate>
    </mah:MetroWindow.Resources>

    <Grid Margin="20">
        <!-- 순서대로 탭 / 상단 Grid / 하단 Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <!-- 상단 탭 -->
        <TabControl Grid.Row="0" Grid.ColumnSpan="1"
                    ItemsSource="{Binding TabItems}"
                    SelectedItem="{Binding SelectedTabItem, Mode=TwoWay}"
                    ItemTemplate="{StaticResource TabHeaderTemplate}">
            <!-- 탭 스타일 커스터마이징 -->
            <TabControl.Resources>
                <!-- 탭 항목 스타일 -->
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="MinWidth" Value="80"/>
                    <Setter Property="Background" Value="#f5f5f5"/>
                    <!-- 선택X 탭 배경색-->
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <!-- 선택 X 탭 선색 -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <!-- 탭 모양 템플릿-->
                                <Border 
                                    Name="Border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="4,4,0,0"
                                    Padding="5,3">
                                    <ContentPresenter 
                                                x:Name="ContentSite"
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Center" 
                                                ContentSource="Header"
                                                Margin="6,2"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <!-- 선택O 색 -->
                                        <Setter TargetName="Border" Property="Background" Value="#FFECB3"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="Gray"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- 콘텐츠는 별도 ContentPresenter로 표시하므로 비움 -->
            <TabControl.ContentTemplate>
                <DataTemplate/>
            </TabControl.ContentTemplate>
        </TabControl>

        <!-- 콘텐츠 영역 -->
        <ContentPresenter Grid.Row="1" Grid.RowSpan="2"
                          Content="{Binding SelectedTabItem.Content}"/>
    </Grid>
</mah:MetroWindow>
