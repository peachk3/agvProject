<UserControl x:Class="agvProject.Views.MissionViewControl"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
            xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"     
            xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
            xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
            xmlns:local="clr-namespace:agvProject.Views"
            xmlns:viewModels="clr-namespace:agvProject.ViewModels"
            mc:Ignorable="d"
            d:DataContext="{d:DesignInstance Type=viewModels:MissionViewModel}">

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- 필터 영역 -->
                <RowDefinition Height="Auto"/>
                <!-- AGV 상태 영역 -->
                <RowDefinition Height="*" MinHeight="300"/>
                <!-- 미션 목록 -->
                <RowDefinition Height="Auto"/>
                <!-- 하단 버튼 영역 -->
            </Grid.RowDefinitions>

            <!-- 상단 필터 및 검색 영역 -->
            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,5,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!-- 왼쪽: 검색 필터 영역 -->
                        <ColumnDefinition Width="400"/>
                        <!-- 오른쪽: 미션장소 + 버튼들 영역 -->
                    </Grid.ColumnDefinitions>

                    <!-- 왼쪽: 운반차, 로봇암, 날짜, 검색 버튼 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="운반차:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Width="120" Margin="0,0,20,0" 
                                SelectedItem="{Binding SelectedAgv}">
                            <ComboBoxItem Content="전체" IsSelected="True"/>
                            <ComboBoxItem Content="AGV-01"/>
                            <ComboBoxItem Content="AGV-02"/>
                        </ComboBox>

                        <TextBlock Text="로봇암:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Width="120" Margin="0,0,20,0"
                                SelectedItem="{Binding SelectedRobotArm}">
                            <ComboBoxItem Content="전체" IsSelected="True"/>
                            <ComboBoxItem Content="로봇암-A"/>
                            <ComboBoxItem Content="로봇암-B"/>
                        </ComboBox>

                        <TextBlock Text="날짜:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <DatePicker Width="140" Margin="0,0,15,0" 
                                SelectedDate="{Binding SelectedDate}"/>
                        <Button Content="검색" Width="60" Height="30" 
                                Command="{Binding SearchCommand}"/>
                    </StackPanel>

                    <!-- 오른쪽: 미션장소 + 미션관련 버튼들 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="미션장소:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Width="100" Margin="0,0,15,0"
                                SelectedItem="{Binding SelectedMissionLocation}">
                            <ComboBoxItem Content="적재지" IsSelected="True"/>
                            <ComboBoxItem Content="분류"/>
                            <ComboBoxItem Content="창고"/>
                        </ComboBox>

                        <Button Content="미션 추가" Width="75" Height="30" Margin="0,0,8,0"
                            Background="#c2a979" Foreground="White"
                            Command="{Binding AddMissionCommand}"/>
                        <!--<Button Content="미션 취소" Width="75" Height="30" Margin="0,0,8,0"
                            Background="#d9534f" Foreground="White"
                            Command="{Binding CancelMissionCommand}"/> -->
                        <Button Content="새로고침" Width="75" Height="30"
                            Background="#F5F5F5" Foreground="Black"
                            BorderBrush="#CCCCCC" BorderThickness="1"
                            Command="{Binding RefreshCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- AGV 상태 요약 영역 -->
            <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="CheckCircle" Foreground="#4CAF50" Width="20" Height="20" Margin="0,0,8,0"/>
                        <TextBlock Text="완료: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Missions.Count, Converter={StaticResource StatusCountConverter}, ConverterParameter=완료}" Foreground="#4CAF50" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="ClockOutline" Foreground="#FF9800" Width="20" Height="20" Margin="0,0,8,0"/>
                        <TextBlock Text="진행 중: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Missions.Count, Converter={StaticResource StatusCountConverter}, ConverterParameter=진행중}" Foreground="#FF9800" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="Pause" Foreground="#9E9E9E" Width="20" Height="20" Margin="0,0,8,0"/>
                        <TextBlock Text="대기: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Missions.Count, Converter={StaticResource StatusCountConverter}, ConverterParameter=대기}" Foreground="#9E9E9E" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="AlertCircle" Foreground="#F44336" Width="20" Height="20" Margin="0,0,8,0"/>
                        <TextBlock Text="오류: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Missions.Count, Converter={StaticResource StatusCountConverter}, ConverterParameter=오류}" Foreground="#F44336" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 미션 목록 영역 readonly True -->
            <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1">
                <DataGrid x:Name="MissionDataGrid" 
        AutoGenerateColumns="False"
        CanUserAddRows="False"
        IsReadOnly="True" 
        GridLinesVisibility="Horizontal"
        HorizontalGridLinesBrush="LightGray"
        HeadersVisibility="Column"
        MinHeight="200"
        VerticalScrollBarVisibility="Auto"
        HorizontalScrollBarVisibility="Disabled"
        ItemsSource="{Binding Missions}">

                    <DataGrid.Resources>
                        <!-- 기본 셀 스타일 -->
                        <Style TargetType="DataGridCell">
                            <Setter Property="ClipToBounds" Value="True" />
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>

                        <!-- 비고 셀 스타일 -->
                        <Style x:Key="RemarkCellStyle" TargetType="DataGridCell">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Text}"/>
                            <Setter Property="Opacity" Value="1"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Text}"/>
                                    <Setter Property="Opacity" Value="1"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Text}"/>
                                    <Setter Property="Opacity" Value="1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                        <!-- 텍스트 가운데 정렬 스타일 -->
                        <Style x:Key="CenterTextCellTextBlock" TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>

                        <!-- 개별 체크박스용 스타일 (필요함!) -->
                        <Style x:Key="FlatCheckBoxStyle" TargetType="CheckBox">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="CheckBox">
                                        <Grid Width="18" Height="18">
                                            <Border x:Name="Box"
                                        CornerRadius="2"
                                        BorderThickness="1"
                                        Background="Transparent"
                                        BorderBrush="{DynamicResource MahApps.Brushes.Control.Border}"/>
                                            <!-- 체크(✓) -->
                                            <Path x:Name="Tick"
                                      Data="M 3 9 L 7 13 L 15 5"
                                      Stroke="{DynamicResource MahApps.Brushes.Accent}"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      StrokeLineJoin="Round"
                                      Visibility="Collapsed"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="Tick" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="Box" Property="Opacity" Value="0.5"/>
                                                <Setter TargetName="Tick" Property="Opacity" Value="0.5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="MinHeight" Value="30"/>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <!-- 🔥 헤더: 버튼, 개별: 체크박스 -->
                        <DataGridCheckBoxColumn Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Width="60"
                                    IsReadOnly="False">

                            <!-- 개별 체크박스 스타일 -->
                            <DataGridCheckBoxColumn.ElementStyle>
                                <Style TargetType="CheckBox" BasedOn="{StaticResource FlatCheckBoxStyle}">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridCheckBoxColumn.ElementStyle>

                            <!-- 헤더 버튼 -->
                            <!-- 오렌지 색감 기본 버전 -->
                            <DataGridCheckBoxColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <Button Command="{Binding DataContext.ToggleSelectAllCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    BorderThickness="0"
                                                    Margin="0"
                                                    Cursor="Hand">
                                                    <Button.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                            <GradientStop Color="#FF9800" Offset="0"/>
                                                            <GradientStop Color="#F57C00" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Button.Background>

                                                    <Button.Content>
                                                        <StackPanel Orientation="Horizontal" 
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center">
                                                            <TextBlock Text="☑" FontSize="12" Margin="0,0,3,0" Foreground="White"/>
                                                            <TextBlock Text="선택" 
                                                       Foreground="White" 
                                                       FontSize="10" 
                                                       FontWeight="SemiBold"/>
                                                        </StackPanel>
                                                    </Button.Content>

                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background">
                                                                        <Setter.Value>
                                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                                <GradientStop Color="#FFB74D" Offset="0"/>
                                                                                <GradientStop Color="#FF8F00" Offset="1"/>
                                                                            </LinearGradientBrush>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Trigger>
                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter Property="Background">
                                                                        <Setter.Value>
                                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                                <GradientStop Color="#F57C00" Offset="0"/>
                                                                                <GradientStop Color="#E65100" Offset="1"/>
                                                                            </LinearGradientBrush>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGridCheckBoxColumn.HeaderStyle>
                        </DataGridCheckBoxColumn>

                        <!-- 나머지 컬럼들 -->
                        <DataGridTextColumn Header="미션 ID" Binding="{Binding MissionId}" Width="80" IsReadOnly="True"
                                ElementStyle="{StaticResource CenterTextCellTextBlock}"/>

                        <DataGridTextColumn Header="미션 등록시간" Binding="{Binding AddMissionTime, StringFormat=yyyy-MM-dd HH:mm}" Width="130" IsReadOnly="True"
                                ElementStyle="{StaticResource CenterTextCellTextBlock}"/>

                        <DataGridTextColumn Header="공정명" Binding="{Binding ProcessName}" Width="100" IsReadOnly="True"/>

                        <DataGridTextColumn Header="출발지" Binding="{Binding StartLocation}" Width="100" IsReadOnly="True"/>

                        <DataGridTextColumn Header="전체수량" Binding="{Binding Total}" Width="80" IsReadOnly="True"
                                ElementStyle="{StaticResource CenterTextCellTextBlock}"/>

                        <DataGridTextColumn Header="미션시작시간" Binding="{Binding MissionStartTime, StringFormat=yyyy-MM-dd HH:mm}" Width="130" IsReadOnly="True"
                                ElementStyle="{StaticResource CenterTextCellTextBlock}"/>

                        <DataGridTextColumn Header="목적지" Binding="{Binding FinalLocation}" Width="100" IsReadOnly="True"/>

                        <DataGridTextColumn Header="상태" Binding="{Binding Status}" Width="80" IsReadOnly="True"
                                ElementStyle="{StaticResource CenterTextCellTextBlock}"/>

                        <DataGridTextColumn Header="미션종료시간" Binding="{Binding MissionEndTime, StringFormat=yyyy-MM-dd HH:mm}" Width="130" IsReadOnly="True"
                                ElementStyle="{StaticResource CenterTextCellTextBlock}"/>

                        <DataGridTextColumn Header="소요 시간" Binding="{Binding Duration, StringFormat=hh\\:mm}" Width="100" IsReadOnly="True"
                                ElementStyle="{StaticResource CenterTextCellTextBlock}"/>

                        <!-- 비고 컬럼 -->
                        <DataGridTemplateColumn Header="비고"
                                    Width="*"
                                    MinWidth="180"                
                                    IsReadOnly="True"
                                    CellStyle="{StaticResource RemarkCellStyle}">

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Disabled"
                                      CanContentScroll="False">
                                        <TextBlock Text="{Binding AddInfo}"
                                       TextWrapping="NoWrap"
                                       Margin="5,0"
                                       Foreground="{DynamicResource MahApps.Brushes.Text}"/>
                                    </ScrollViewer>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            <!-- 하단 버튼 영역 -->
            <Grid Grid.Row="3" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>