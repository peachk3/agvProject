<UserControl x:Class="agvProject.Views.MissionViewControl"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
            xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"     
            xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
            xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
            xmlns:local="clr-namespace:agvProject.Views"
            xmlns:viewModels="clr-namespace:agvProject.ViewModels"
            mc:Ignorable="d"
            d:DataContext="{d:DesignInstance Type=viewModels:MissionViewModel}">

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- 필터 영역 -->
                <RowDefinition Height="Auto"/>
                <!-- AGV 상태 영역 -->
                <RowDefinition Height="*" MinHeight="300"/>
                <!-- 미션 목록 -->
                <RowDefinition Height="Auto"/>
                <!-- 하단 버튼 영역 -->
            </Grid.RowDefinitions>

            <!-- 상단 필터 및 검색 영역 -->
            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,5,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!-- 왼쪽: 검색 필터 영역 -->
                        <ColumnDefinition Width="400"/>
                        <!-- 오른쪽: 미션장소 + 버튼들 영역 -->
                    </Grid.ColumnDefinitions>

                    <!-- 왼쪽: 운반차, 로봇암, 날짜, 검색 버튼 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="운반차:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Width="120" Margin="0,0,20,0" 
                                SelectedItem="{Binding SelectedAgv}">
                            <ComboBoxItem Content="전체" IsSelected="True"/>
                            <ComboBoxItem Content="AGV-01"/>
                            <ComboBoxItem Content="AGV-02"/>
                        </ComboBox>

                        <TextBlock Text="로봇암:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Width="120" Margin="0,0,20,0"
                                SelectedItem="{Binding SelectedRobotArm}">
                            <ComboBoxItem Content="전체" IsSelected="True"/>
                            <ComboBoxItem Content="로봇암-A"/>
                            <ComboBoxItem Content="로봇암-B"/>
                        </ComboBox>

                        <TextBlock Text="날짜:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <DatePicker Width="140" Margin="0,0,15,0" 
                                SelectedDate="{Binding SelectedDate}"/>
                        <Button Content="검색" Width="60" Height="30" 
                                Command="{Binding SearchCommand}"/>
                    </StackPanel>

                    <!-- 오른쪽: 미션장소 + 미션관련 버튼들 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="미션장소:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Width="100" Margin="0,0,15,0"
                                SelectedItem="{Binding SelectedMissionLocation}">
                            <ComboBoxItem Content="적재지" IsSelected="True"/>
                            <ComboBoxItem Content="분류"/>
                            <ComboBoxItem Content="창고"/>
                        </ComboBox>

                        <Button Content="미션 추가" Width="75" Height="30" Margin="0,0,8,0"
                            Background="#c2a979" Foreground="White"
                            Command="{Binding AddMissionCommand}"/>
                        <Button Content="미션 취소" Width="75" Height="30" Margin="0,0,8,0"
                            Background="#d9534f" Foreground="White"
                            Command="{Binding CancelMissionCommand}"/>
                        <Button Content="새로고침" Width="75" Height="30"
                            Background="#F5F5F5" Foreground="Black"
                            BorderBrush="#CCCCCC" BorderThickness="1"
                            Command="{Binding RefreshCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- AGV 상태 요약 영역 -->
            <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="CheckCircle" Foreground="#4CAF50" Width="20" Height="20" Margin="0,0,8,0"/>
                        <TextBlock Text="완료: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Missions.Count, Converter={StaticResource StatusCountConverter}, ConverterParameter=완료}" Foreground="#4CAF50" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="ClockOutline" Foreground="#FF9800" Width="20" Height="20" Margin="0,0,8,0"/>
                        <TextBlock Text="진행 중: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Missions.Count, Converter={StaticResource StatusCountConverter}, ConverterParameter=진행중}" Foreground="#FF9800" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="Pause" Foreground="#9E9E9E" Width="20" Height="20" Margin="0,0,8,0"/>
                        <TextBlock Text="대기: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Missions.Count, Converter={StaticResource StatusCountConverter}, ConverterParameter=대기}" Foreground="#9E9E9E" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="AlertCircle" Foreground="#F44336" Width="20" Height="20" Margin="0,0,8,0"/>
                        <TextBlock Text="오류: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Missions.Count, Converter={StaticResource StatusCountConverter}, ConverterParameter=오류}" Foreground="#F44336" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 미션 목록 영역 -->
            <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1">
                <DataGrid x:Name="MissionDataGrid" 
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    IsReadOnly="True"
                    GridLinesVisibility="Horizontal"
                    HorizontalGridLinesBrush="LightGray"
                    HeadersVisibility="Column"
                    MinHeight="200"
                    ItemsSource="{Binding Missions}">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="선택" Binding="{Binding IsSelected}" Width="50"/>

                        <DataGridTextColumn Header="미션 ID" Binding="{Binding MissionId}" Width="80"/>

                        <DataGridTextColumn Header="미션 등록시간" Binding="{Binding AddMissionTime, StringFormat=yyyy-MM-dd HH:mm}" Width="130"/>

                        <DataGridTextColumn Header="공정명" Binding="{Binding ProcessName}" Width="100"/>

                        <DataGridTextColumn Header="출발지" Binding="{Binding StartLocation}" Width="100"/>

                        <DataGridTextColumn Header="전체수량" Binding="{Binding Total}" Width="80"/>

                        <DataGridTextColumn Header="미션시작시간" Binding="{Binding MissionStartTime, StringFormat=yyyy-MM-dd HH:mm}" Width="130"/>

                        <DataGridTextColumn Header="목적지" Binding="{Binding FinalLocation}" Width="100"/>

                        <DataGridTextColumn Header="상태" Binding="{Binding Status}" Width="80"/>

                        <DataGridTextColumn Header="미션종료시간" Binding="{Binding MissionEndTime, StringFormat=yyyy-MM-dd HH:mm}" Width="130"/>

                        <DataGridTextColumn Header="소요 시간" Binding="{Binding Duration, StringFormat=hh\\:mm}" Width="100"/>

                        <DataGridTextColumn Header="비고" Binding="{Binding AddInfo}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- 하단 버튼 영역 -->
            <Grid Grid.Row="3" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 왼쪽: 전체 선택/해제 버튼 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="전체선택" Width="80" Height="32" Margin="0,0,10,0" 
                        Command="{Binding SelectedAllCommand}"/>
                    <Button Content="전체해제" Width="80" Height="32" 
                        Command="{Binding UnSelectedAllCommand}"/>
                </StackPanel>

                <!-- 오른쪽: 내보내기 버튼 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="내보내기" Width="80" Height="32" 
                        Command="{Binding ExportCommand}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>