<UserControl x:Class="agvProject.Views.EventLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:agvProject.Views"
             mc:Ignorable="d">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"   Margin="0,5,0,10">
            <!-- 검색 창 -->
            <Border BorderBrush="Gray" BorderThickness="1" />

            <Label Content="로그 필터" Background="White" FontWeight="Bold" Padding="2" 
                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,-10,0,0"/>

            <Grid Margin="10,10,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" 
                            HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="시작 일자 :" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Width="120" Margin="0,0,20,0">
                        <ComboBoxItem Content="전체" IsSelected="True"/>
                    </ComboBox>

                    <TextBlock Text="종료 일자 :" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Width="120" Margin="0,0,20,0">
                        <ComboBoxItem Content="전체" IsSelected="True"/>
                    </ComboBox>

                    <TextBlock Text="날짜 :" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <DatePicker Width="140" Margin="0,0,15,0" 
                                SelectedDate="{Binding SelectedDate}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                            HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBox Width="200" Height="30" Margin="0,0,10,0" VerticalAlignment="Center"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                        <mah:TextBoxHelper.Watermark>검색어 입력…</mah:TextBoxHelper.Watermark>
                    </TextBox>

                    <Button Content="검색" Width="60" Height="30" HorizontalAlignment="Right"
                            Command="{Binding SearchCommand}"/>

                    <!-- (+ 엔터키 검색) -->
                    <StackPanel.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                    </StackPanel.InputBindings>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 로그 데이터 그리드-->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1">
            <DataGrid x:Name="LogDataGrid" CanUserAddRows="False" IsReadOnly="True"
                      GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="LightGray"
                      HeadersVisibility="Column"
                      ItemsSource="{Binding Logs}">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="no." Binding="{Binding }" Width=".6*" />
                    <DataGridTextColumn Header="시간" Binding="{Binding }" Width="2*" />
                    <DataGridTextColumn Header="로그 레벨" Binding="{Binding }" Width="1.5*" />
                    <DataGridTextColumn Header="소스" Binding="{Binding }" Width="2*" />
                    <DataGridTextColumn Header="메시지" Binding="{Binding }" Width="5*" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>

    </Grid>

</UserControl>
